<Window x:Class="SecondLab.CreateSpecWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecondLab"
        mc:Ignorable="d"
        Title="CreateSpecWindow" Height="250" Width="300" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <Label Content="Название специализации&#xD;&#xA;" FontWeight="Bold" FontSize="14" Margin="10,11,10,10" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Margin="7,8,7,13" TextWrapping="Wrap" Grid.Row="1"/>
        <Button x:Name="CreateButton" Content="Добавить специализацию" Margin="7,6,7,10" Grid.Row="2" Click="CreateButton_Click" />

    </Grid>
</Window>
