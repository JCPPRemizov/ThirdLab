<Window x:Class="SecondLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecondLab"
        mc:Ignorable="d"
        Title="MainWindow" Height="424" Width="524" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="MainDataGrid" Margin="10,10,10,10" Grid.ColumnSpan="3" PreviewKeyDown="MainDataGrid_PreviewKeyDown">

        </DataGrid>
        <Button x:Name="NextButton" Content="Следующая страница" Margin="4,14,10,14" Click="NextButton_Click" Grid.Row="1" Grid.Column="2"/>
        <Button x:Name="ReturnButton" Content="Назад" Margin="10,14,6,14" Grid.Row="1" Click="ReturnButton_Click"/>
        <Button x:Name="CreateButton" Content="Создать запись" Grid.Row="1" Click="CreateButton_Click" Grid.Column="1" Margin="0,14,0,14"/>
    </Grid>
</Window>
